    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Py-Mosaics",
            "type": "debugpy",
            "request": "launch",
            "program": "./cylindrical.py",
            "console": "integratedTerminal",
            "args": "--directory data/4_cyl --images", 
        },
        {
            "name": "Py-Toric",
            "type": "debugpy",
            "request": "launch",
            "program": "./toric.py",
            "console": "integratedTerminal",
            "args": "--string 00211279a7aa3434 --images", 
        }
    ]
}